@model FMassage.Models.Massage
@{
    Layout = "_Layout";
    ViewData["Title"] = "Подтверждение удаления услуги";
}

<h2>Удаление услуги</h2>

<p>Вы действительно хотите удалить услугу "@Model.Name"?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a href="@Url.Action("Index", "Massage")" class="btn btn-secondary">Отмена</a>
</form>