@model IEnumerable<FMassage.Models.Massage>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Список услуг массажа";
}

<h2>Список услуг массажа</h2>
<a href="@Url.Action("Create", "Massage")" class="btn btn-info mb-3">Добавить новую услугу</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>
                    <a href="@Url.Action("Edit", "Massage", new { id = item.Id })" class="btn btn-warning">Редактировать</a>
                    <a href="@Url.Action("Delete", "Massage", new { id = item.Id })" onclick="return confirm('Вы действительно хотите удалить данную услугу?');" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>