@{
    Layout = "_Layout"; // Используем общий макет
    ViewData["Title"] = "Кабинет массажа FMassage"; // Заголовок страницы
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>Кабинет массажа</title>
    <!-- Минимальные стили для удобства восприятия -->
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #fafafa;
            text-align: center;
            padding-top: 50px;
        }

        /* Оформление кнопок */
        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin-top: 20px;
            text-decoration: none;
            border-radius: 5px;
            transition: all 0.3s ease-in-out;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

        .btn-outline-primary {
            color: #007bff;
            border-color: #007bff;
        }

        .btn:hover {
            transform: scale(1.05);
        }

        /* Стили для информации о пользователе */
        .user-info {
            position: absolute;
            top: 10px;
            right: 20px;
            padding: 10px;
            background-color: #f8f9fa;
            border-radius: 5px;
            font-size: 14px;
        }

        .user-status {
            margin-bottom: 5px;
            font-weight: bold;
        }

        .user-name {
            color: #007bff;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <!-- Блок информации о пользователе -->
    <div class="user-info">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="user-status">Вы вошли как:</div>
            <div class="user-name">@User.Identity.Name</div>
        }
        else
        {
            <div class="user-status">Вы не авторизованы</div>
        }
    </div>

    <h1>Кабинет массажа</h1>
    <p>Профессиональный уход и забота о вашем здоровье.</p>

    <a href="@Url.Action("Index", "Massage")" class="btn btn-primary">Наши услуги</a>
    <a href="@Url.Action("Index", "Booking")" class="btn btn-success">Записаться на сеанс</a>

    @if (User.Identity.IsAuthenticated)
    {
        <a href="@Url.Action("Logout", "Users")" class="btn btn-outline-primary">Выход</a>
    }
    else
    {
        <a href="@Url.Action("Login", "Users")" class="btn btn-outline-primary">Вход</a>
    }
</body>
</html>