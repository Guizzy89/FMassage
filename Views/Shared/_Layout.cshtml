<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FMassage</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">FMassage</a>
            </div>
            <div class="user-info">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="user-status">Вы вошли как:</div>
                    <div class="user-name">@User.Identity.Name</div>
                }
                else
                {
                    <div class="user-status">Вы не авторизованы</div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody() <!-- Основное содержание страницы -->
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            © @DateTime.Now.Year - FMassage
        </div>
    </footer>

    <!-- Скрипты -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>